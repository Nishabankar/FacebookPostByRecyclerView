<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_marginBottom="8dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/purple_200"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imgPost"
        android:fontFamily="monospace"
        android:id="@+id/txtPostTitle"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="4dp"
        android:id="@+id/imgPost"
        app:layout_constraintTop_toBottomOf="@id/txtPostTitle"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/txtPostLikes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPost" />

    <ImageView
        android:id="@+id/imgLikeButton"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toLeftOf="@id/txtPostLikes"
        app:layout_constraintTop_toBottomOf="@id/imgPost" />

</androidx.constraintlayout.widget.ConstraintLayout>